# Database Configuration
DATABASE_URL=postgresql+asyncpg://monopoly_user:monopoly_pass@localhost:5432/monopoly_arena

# Alternative for sync operations (Alembic migrations, dashboard)
DATABASE_URL_SYNC=postgresql://monopoly_user:monopoly_pass@localhost:5432/monopoly_arena

# Pool settings
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Application settings
DEBUG=true
LOG_LEVEL=INFO

###############################################################################
# LLM configuration (Ollama / vLLM / OpenAI-compatible)
###############################################################################

# LLM backend provider: ollama | vllm | openai | custom
LLM_PROVIDER=ollama

# Base URL for OpenAI-compatible API
# - Ollama: http://localhost:11434/v1
# - vLLM:   http://localhost:8000/v1
LLM_BASE_URL=http://localhost:11434/v1

# Model name / identifier
# Examples:
# - gemma3:4b                       (Ollama)
# - google/gemma-3-4b-it            (vLLM)
LLM_MODEL=gemma3:4b

# Optional API key (for OpenAI / secured vLLM deployments)
# LLM_API_KEY=your-secret-key-here

# Timeouts and limits
LLM_TIMEOUT_SECONDS=30
LLM_MAX_TOKENS=512

###############################################################################
# Dashboard / API configuration
###############################################################################

# Dashboard HTTP server
DASHBOARD_HOST=127.0.0.1
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=true

# Main FastAPI server base URL
MAIN_SERVER_URL=http://localhost:8000

# Optional separate API base for dashboard (defaults to MAIN_SERVER_URL)
# API_BASE_URL=http://localhost:8000
